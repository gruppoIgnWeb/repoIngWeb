<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>data.jdbc.driver</param-name>
        <param-value>com.mysql.jdbc.Driver</param-value>
    </context-param>
    <context-param>
        <param-name>data.
            source</param-name>
        <param-value>java:comp/env/jdbc/meetingplanner</param-value>
    </context-param>
    <context-param>
        <param-name>data.jdbc.connectionstring</param-name>
        <param-value>jdbc:mysql://localhost/meetingplanner</param-value>
    </context-param>
    <context-param>
        <param-name>data.jdbc.username</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>data.jdbc.password</param-name>
        <param-value> </param-value>
    </context-param>
    <listener>
        <listener-class>it.univaq.meetingplan.listeners.ContextInitializer</listener-class>
    </listener>
    <servlet>
        <description>prova</description>
        <servlet-name>Hello</servlet-name>
        <servlet-class>it.univaq.f4i.iw.examples.Salutami</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Hello</servlet-name>
        <url-pattern>/salutami</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    <resource-ref>
        <res-ref-name>jdbc/meetingplanner</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
    
    <welcome-file-list>
        <welcome-file>salutami</welcome-file>
    </welcome-file-list>
</web-app>
